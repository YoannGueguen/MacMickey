@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/menu1.jpg" alt="menu1" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Un menu pour tout les goûts
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/menu2.jpg" alt="menu2" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Le menu 100% poulet
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div class="gallery col-lg-3 col-md-6 col-sm-12 col-xs-12">
        <a target="_blank" href="~/images/burger1.jpg">
            <img src="~/images/burger1.jpg" alt="burger1" width="300" height="200">
        </a>
        <div class="desc">le Burger classique</div>
    </div>

    <div class="gallery col-lg-3 col-md-6 col-sm-12 col-xs-12">
        <a target="_blank" href="~/images/burger2.png">
            <img src="~/images/burger2.png" alt="burger2" width="300" height="200">
        </a>
        <div class="desc">L' imperial</div>
    </div>

    <div class="gallery col-lg-3 col-md-6 col-sm-12 col-xs-12">
        <a target="_blank" href="~/images/burger3.jpg">
            <img src="~/images/burger3.jpg" alt="burger3" width="300" height="200">
        </a>
        <div class="desc">Le traditionnel</div>
    </div>

    <div class="gallery col-lg-3 col-md-6 col-sm-12 col-xs-12">
        <a target="_blank" href="~/images/wrap1.jpg">
            <img src="~/images/wrap1.jpg" alt="wrap1" width="300" height="200">
        </a>
        <div class="desc">Le wrap classique</div>
    </div>
</div>


